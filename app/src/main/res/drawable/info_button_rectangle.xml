<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:id="@+id/listview_background_shape">
            <stroke
                android:width="0.7dp"
                android:color="@color/button_info_stroke" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/button_info_background" />
        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:drawable="@drawable/baseline_info_24"
        android:gravity="center" />
</layer-list>