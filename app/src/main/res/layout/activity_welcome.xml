<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/app_name_simple"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/choose_city"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <RadioGroup
            android:id="@+id/cityRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checkedButton="@+id/radioButtonKiev"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <RadioButton
                android:id="@+id/radioButtonKiev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kiev"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonMinsk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/minsk"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonBrest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/brest"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonGomel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gomel"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonSmolensk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/smolensk"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonBryansk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bryansk"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonKursk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kursk"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonVelikiyeLuki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/velikiye_luki"
                android:textSize="18sp" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SelectCityFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:text="@string/update"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/fabRipple"
        app:srcCompat="@drawable/baseline_done_24"
        app:tint="@color/colorFabDayNight" />
</RelativeLayout>