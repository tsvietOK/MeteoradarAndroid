<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ForegroundCardContainer"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="wrap_content"
        android:layout_height="390dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/NoConnectionBitmap"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_cloud_off_24"
            android:visibility="invisible" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <FrameLayout>

                <ImageView
                    android:id="@+id/ForegroundMap"
                    android:layout_width="match_parent"
                    android:layout_height="390dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="10dp"
                    android:background="@drawable/info_button_rectangle" />
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorCardBackground"
                android:theme="@style/OverScrollCustomColor"
                android:visibility="visible">

                <include layout="@layout/info_list" />
            </ScrollView>

        </TableLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/TimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ForegroundCardContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/TimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeText"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" />

    <SeekBar
        android:id="@+id/TimeLine"
        style="@android:style/Widget.Material.SeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:min="0" />

    <TextView
        android:id="@+id/StatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/status_radar_off"
        android:textColor="@color/radarOffTextColor"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>