<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ForegroundCardContainer"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="2dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="*">

            <TableRow>

                <ImageView
                    android:id="@+id/ForegroundMap"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
                    <!--android:scaleType="centerCrop" -->
            </TableRow>

            <TableRow>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/OverScrollCustomColor"
                    android:visibility="visible">

                    <include layout="@layout/info_list" />
                </ScrollView>
                <!--<com.google.android.material.button.MaterialButton-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="10dp"-->
                <!--/>-->
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/TimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ForegroundCardContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/productsans"
        android:text=""
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/TimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeText"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="9dp" />

    <SeekBar
        android:id="@+id/TimeLine"
        style="@android:style/Widget.Material.SeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeLayout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:max="9"
        android:min="0"
        android:progress="9" />

    <TextView
        android:id="@+id/StatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/status_radar_off"
        android:textColor="@color/radarOffTextColor"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>